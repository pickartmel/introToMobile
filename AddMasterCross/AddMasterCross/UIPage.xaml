<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="AddMasterCross.UIPage"
    Padding="20,20,20,20"
    >
    <StackLayout>
    <Label Text="Add Master Pro" Font="30" XAlign="Center"/>
        <StackLayout Padding="0,50,0,0">
            <Label Text="First Number"/>
            <Entry x:Name="txtFirstNumber" Keyboard="Numeric"/>
        </StackLayout>
        <StackLayout Padding="0,20,0,0">
            <Label Text="Second Number"/>
            <Entry x:Name="txtSecondNumber" Keyboard="Numeric"/>
        </StackLayout>
        <StackLayout Padding="0,50,0,0">
            <Label x:Name="lblDisplay" Text="0" Font="30" XAlign="Center"/>

        </StackLayout>

        <StackLayout HorizontalOptions="Center" Orientation="Horizontal" Padding="0,50,0,0">
            <Button x:Name="btnAdd" Text="Add" Clicked="btnAdd_Clicked" />
            <Button x:Name="btnClear" Text="Clear" Clicked="btnClear_Clicked"/>
        </StackLayout>
        
    </StackLayout>
</ContentPage>
