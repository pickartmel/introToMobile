<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="PlatoClalculator.Views.ManPage"
    Padding="20,100,20,20">
	<ContentPage.Content>
        <StackLayout>
            <Label Text="Calculate Perfect Age For Spouse" FontSize="Large" XAlign="Center"/>
            <Label Text="Enter Your Current Age" Margin="0,50,0,0" XAlign="Center"/>
            <Entry x:Name="txtMansAge"/>
             <Button x:Name="btnEnter" Text="Enter" Clicked="btnEnter_Clicked"/>
            <Label x:Name="lblAgeOfWoman" Margin="0,50,0,0"/>
             <Button x:Name="Clear" Text="Clear" Margin="0,25,0,0" Clicked="ClearHandle_Clicked"/>
           
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
